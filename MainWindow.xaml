<Window x:Class="PRAKTIKA2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnPassengers" Content="Пассажиры" Click="btnPassengers_Click" Margin="5"/>
            <Button x:Name="btnFlights" Content="Рейсы" Click="btnFlights_Click" Margin="5"/>
            <Button x:Name="btnTickets" Content="Билеты" Click="btnTickets_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>