<Window x:Class="PRAKTIKA2.FlightsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlightsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Margin="0,10">
            <Button x:Name="btnBack" Content="Back" Click="btnBack_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnForward" Content="Forward" Click="btnForward_Click"/>
        </StackPanel>
        <DataGrid x:Name="flightsDataGrid" AutoGenerateColumns="True" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>